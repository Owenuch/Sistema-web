@model ProyProductoMVC.Models.Usuario

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es-PE">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Selección de Rol</title>
    <link rel="stylesheet" href="~/Contenido/Estilos/Roles.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <span class="navbar-brand">
                <i class="fas fa-graduation-cap me-2"></i><!-- Ícono de Font Awesome -->
                PORTAL | Bienvenido(a) @Model.Nombre
            </span>
            <div class="ms-auto">
                <a href="@Url.Action("Logout", "Cuenta")" class="text-white text-decoration-none small">
                    <i class="fas fa-sign-out-alt me-1"></i>
                    Cerrar Sesión
                </a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="content-container">
        <div class="container">
            <div class="row justify-content-center">
           @if (Model.IsNombreRol("Administrador")) {
                <div class="col-md-4 mb-4" onclick="redirectToRolePage('Administrador')">
                    <form action="@Url.Action("Roles", "Cuenta")" method="POST">
                        <input type="hidden" name="rolElegido" value="Administrador">
                        <div class="role-card" onclick="this.closest('form').submit();">
                            <i class="fas fa-user-shield role-icon"></i>
                            <h3 class="role-title">ADMINISTRADOR</h3>
                        </div>
                    </form>
                </div>
            }
           @if (Model.IsNombreRol("Gerente")) {
                <div class="col-md-4 mb-4" onclick="redirectToRolePage('Docente')">
                    <form action="@Url.Action("Roles", "Cuenta")" method="POST">
                        <input type="hidden" name="rolElegido" value="Docente">
                        <div class="role-card" onclick="this.closest('form').submit();">
                            <i class="fas fa-chalkboard-teacher role-icon"></i>
                            <h3 class="role-title">DOCENTE</h3>
                        </div>
                    </form>
                </div>
            }
           @if (Model.IsNombreRol("Vendedor")) {
                <div class="col-md-4 mb-4" onclick="redirectToRolePage('Apoderado')">
                    <form action="@Url.Action("Roles", "Cuenta")" method="POST">
                        <input type="hidden" name="rolElegido" value="Apoderado">
                        <div class="role-card" onclick="this.closest('form').submit();">
                            <i class="fas fa-user role-icon"></i>
                            <h3 class="role-title">APODERADO</h3>
                        </div>
                    </form>
                </div>
            }
            </div>
        </div>
    </div>
</body>
</html>
