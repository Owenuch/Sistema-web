@model List<ProyProductoMVC.Models.Producto>

@{
    Layout = "~/Views/Shared/_Principal.cshtml";
}

<h1>Buscar Producto</h1>
<hr />
<a href="">Agregar nuevo producto</a>
<hr />
<form method="post">
    <label for="descripcion">Descripción:</label>
    <input type="text" name="txtDescripcion" id="descripcion"
           placeholder="Ingrese la descripción del producto a buscar." required />
    <input type="submit" value="Buscar" />
</form>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Código de Inventario</th>
            <th>Descripción</th>
            <th>Categoria</th>
            <th>Precio</th>
            <th>Stock</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var producto in Model) {
        <tr>
            <td>@producto.Id</td>
            <td>@producto.CodigoInventario</td>
            <td>@producto.Descripcion</td>
            <td>@producto.Categoria</td>
            <td>@producto.Precio</td>
            <td>@producto.Stock</td>
        </tr>
    }
    </tbody>
</table>
